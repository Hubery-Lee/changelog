{
  "name": "changelog",
  "version": "1.0.0",
  "main": "commitlint.config.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "commitlint": "commitlint --edit",
    "release": "release-it",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hubery-Lee/changelog.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Hubery-Lee/changelog/issues"
  },
  "homepage": "https://github.com/Hubery-Lee/changelog#readme",
  "description": "",
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@release-it/conventional-changelog": "^8.0.1",
    "husky": "^9.1.6",
    "release-it": "^17.1.1"
  },
  "dependencies": {
    "glob": "^11.0.0",
    "inflight": "^1.0.6"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): ${version}"
    },
    "github": {
      "release": false
    },
    "gitlab": {
      "release": false,
      "releaseName": "v${version}"
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {}
          ]
        }
      }
    }
  }
}
